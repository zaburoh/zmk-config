#include "keyball39-layouts.dtsi"
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,physical-layout = &default_layout;
    };

    default_transform: default_transform {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <4>;

        map = <
            RC(0, 0) RC(0, 1) RC(0, 2) RC(0, 3) RC(0, 4)    RC(0, 10) RC(0, 9) RC(0, 8) RC(0, 7) RC(0, 6)
            RC(1, 0) RC(1, 1) RC(1, 2) RC(1, 3) RC(1, 4)    RC(1, 10) RC(1, 9) RC(1, 8) RC(1, 7) RC(1, 6)
            RC(2, 0) RC(2, 1) RC(2, 2) RC(2, 3) RC(2, 4)    RC(2, 10) RC(2, 9) RC(2, 8) RC(2, 7) RC(2, 6)
            RC(3, 0) RC(3, 1) RC(3, 2) RC(3, 3) RC(3, 4) RC(3, 5)    RC(3, 11) RC(3, 10) RC(3, 6)
        >;
    };

    kscan: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;

        row-gpios
            = <&pro_micro 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 19 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 18 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };

    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        keyball39_trackball_split: keyball39_trackball_split@0 {
            compatible = "zmk,input-split";
            reg = <0>;
        };
    };

    keyball39_trackball_listener: keyball39_trackball_listener {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&keyball39_trackball_split>;
    };
};
